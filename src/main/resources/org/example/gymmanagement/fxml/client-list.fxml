<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="350.0" prefWidth="451.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gymmanagement.controllers.ClientListController">
   <children>
      <Button fx:id="btnBack" layoutX="385.0" layoutY="14.0" mnemonicParsing="false" onAction="#goBack" text="Назад" />
      <ComboBox fx:id="comboClient" layoutX="45.0" layoutY="66.0" onAction="#showClientInfo" prefWidth="150.0" />
      <Label layoutX="45.0" layoutY="48.0" text="Клиент" />
      <TextField fx:id="lblLogin" layoutX="45.0" layoutY="195.0" />
      <TextField fx:id="lblPassword" layoutX="226.0" layoutY="195.0" />
      <TextField fx:id="lblFio" layoutX="45.0" layoutY="138.0" />
      <Label layoutX="45.0" layoutY="121.0" text="Фамилия Имя" />
      <Label layoutX="45.0" layoutY="177.0" text="Логин" />
      <Label layoutX="226.0" layoutY="177.0" text="Пароль" />
      <VBox layoutX="45.0" layoutY="236.0" prefHeight="99.0" prefWidth="198.0">
         <children>
            <Pane fx:id="paneConfirm" prefHeight="36.0" prefWidth="198.0" visible="false">
               <children>
                  <TextField fx:id="textPassword" onAction="#hideConfirmLbl" onMouseClicked="#hideConfirmLbl" prefHeight="26.0" prefWidth="187.0" />
                  <Label fx:id="lblConfirmAction" layoutX="1.0" layoutY="3.0" onMouseClicked="#hideConfirmLbl" prefHeight="18.0" prefWidth="176.0" text="Подтвердите действие паролем" textFill="#a9a7a7" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Pane>
            <Button fx:id="btnSave" mnemonicParsing="false" onAction="#doSave" text="Сохранить изменения" />
            <Label fx:id="lblSaveGood" text="Изменения прошли успешно!" visible="false" />
         </children>
      </VBox>
   </children>
</AnchorPane>
